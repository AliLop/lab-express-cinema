<div class="container">
    <h3>Ironhack Cinema</h3>
    <p>Click on the movie to check the showtimes</p>
    <div class="row">
        {{#each movies}}
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top img-card" src={{image}} /> 
                <div class="card-body">
                    <h5 class="card-title">{{title}} </h5>
                    <a href="/movies/{{_id}}">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>